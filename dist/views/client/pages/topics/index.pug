extends ../../layout/default.pug
include ../../mixins/box-head.mixins.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("chủ đề bài hát 1")
    
    .row
        each topic in topics 
            .col-6.mb-3
                div(class="card")
                    img(src=`${topic.avatar}`)
                    div(class="card-body")
                        h5(class="card-title") #{topic.title} 
                        p(class="card-text") #{topic.description} 
                        a(href=`/songs/${topic.slug}` class="btn btn-primary") Xem chi tiết
            