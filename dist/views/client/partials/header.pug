header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/images/xinh sông.png", alt="Logo")
      
      .col-5
        .box-search
          form(
            action="/search/result"
            method="GET"
          )
            // key-value gửi lên url phương thức GET
            div(class="form-group d-flex mb-0")
              input(
                type="text"
                placeholder="Nhập từ khóa..."
                class="form-control"
                name="keyword" 
                value=keyword
              )
              button(
                type="submit"
                class="btn btn-primary"
              ) Tìm
      
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li
              a(href="/topics") Chủ đề 
            li
              a(href="/favorite-songs") Ưa thích